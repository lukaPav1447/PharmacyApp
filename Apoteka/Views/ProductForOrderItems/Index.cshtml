@model IEnumerable<Apoteka.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <span class="text-center">
        <h4 class="p-3">KASA</h4>
    </span>
    <div class="row">
            <div class="col-md-8">
                <div id="proizvodi" class="row">
                    <div class="col-12">
                    <input type="text" id="pretraga" class="form-control mb-3" onkeyup="pretragaLijekova(this)" placeholder="Pretraži proizvode">
                        <div class="text-white rounded-3 m-1 p-2 d-flex">
                            @foreach (var item in (List<Category>)ViewData["Categories"])
                            {
                                <div class="flex-grow-1 mx-1">
                                    <button name="idKategorije"  class="btn btn-info w-100 kategorija-@item.Categoryid" value="@item.Categoryid" onclick="pretragaPoKategoriji(@item.Categoryid)">@item.Name</button>
                                </div>
                            }
                                <div class="flex-grow-1 mx-1">
                            <button class="btn btn-info w-100" style="color: #052c65;" onclick="pretragaPoKategoriji(0)">Svi proizvodi</button>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        <div class="col-md-8">
            <div id="listaProizvoda" class="row">

            </div>
        </div>
        <div class="col-md-4  overflow-auto okvir border-start-5" style="height: 500px">
            <p>Izabrani proizvodi</p>
            <table class="w-100" >
                <thead>
                    <th class="d-none"></th>
                    <th class="col-4">Naziv</th>
                    <th></th>
                    <th>Broj</th>
                    <th></th>
                    <th>Cijena</th>
                    <th></th>
                </thead>
                <tbody id="bodyTabele">
                </tbody>
            </table>
            <hr />
            <div class="text-end" id="total">Total: 0.00 KM</div>
            <button type="submit" class="form-control mb-3 border-2" onclick="preuzmiPodatkeIzTabele()">Potvrdi Narudžbu</button>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        
        <script src="~/js/pocetna.js">
        </script>
    }
}
